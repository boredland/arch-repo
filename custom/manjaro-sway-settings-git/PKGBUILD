_pkgname=manjaro-sway-settings
pkgname=$_pkgname-git
pkgver=r72.e6668f3.20201231161209
pkgrel=1
arch=('any')
license=('MIT')
pkgdesc='Manjaro Sway Settings'
url="https://github.com/boredland/manjaro-sway-settings"
groups=('sway-manjaro')
depends=(
    'manjaro-base-skel'
    'autotiling'
    'flashfocus'
    'gnome-keyring'
    'grim'
    'grimshot'
	'light'
	'mako'
	'manjaro-sway-settings-git'
	'polkit-gnome'
	'qt5-wayland'
	'slurp'
	'sway'
	'sway-launcher-desktop'
	'swaybg'
	'swayidle'
	'swaylock'
	'swaynagmode'
	'waybar'
	'wob'
	'wdisplays'
	'wf-recorder'
	'wl-clipboard'
	'xorg-server-xwayland'
	'xorg-xhost'
	'xdg-desktop-portal'
	'xdg-desktop-portal-wlr'
	'libpipewire02'
	'sbdp-git'
    'qt5ct'
	'kvantum-qt5'
	'kvantum-theme-matchama'
	'lxappearance'
	'gtk3-nocsd-git'
	'matcha-gtk-theme'
	'papirus-maia-icon-theme'
	'xcursor-breeze'
