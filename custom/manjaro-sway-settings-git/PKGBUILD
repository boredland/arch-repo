# Maintainer: Jonas Strassel <info@jonas-strassel.de>

_pkgname=manjaro-sway-settings
pkgname=$_pkgname-git
pkgver=r80.fce815e.20210106170332
pkgrel=1
arch=('any')
license=('MIT')
pkgdesc='Manjaro Sway Settings'
url="https://github.com/boredland/desktop-settings"
_branch=sway
groups=('sway-manjaro')
depends=(
    'manjaro-base-skel'
    'autotiling'
    'flashfocus'
	'light'
	'mako'
	'qt5-wayland'
	'sway'
	'sbdp-git'
)
makedepends=('git')
optdepends=(
    'ranger: a keyboard centric file manager'
    'qutebrowser: a keyboard-centric browser'
)
provides=('manjaro-desktop-settings')
conflicts=('manjaro-sway-settings')

source=("${_pkgname}::git+${url}.git#branch=$_branch")

md5sums=("SKIP")

pkgver() {
    cd "$srcdir/$_gitname"
    printf "r%s.%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)" "$(date +"%Y%m%d%H%M%S")"
}

package() {
    install -d $pkgdir/etc
    cp -r $_pkgname/community/sway/skel $pkgdir/etc
    cp -r $_pkgname/community/sway/sway $pkgdir/etc

    install -d $pkgdir/usr/share/glib-2.0/schemas
    cp $_pkgname/community/sway/schemas/* $pkgdir/usr/share/glib-2.0/schemas

}

post_upgrade() {
	echo -e "\033[33mplease run 'cp -rf /etc/skel/.config/* ~/.config' to update your .config.\033[0m"
}