pkgname=manjaro-sway-settings
pkgver=20201226182712
pkgrel=1
arch=('any')
license=('GPL')
pkgdesc='Manjaro Sway Settings'
groups=('sway-manjaro')
depends=('manjaro-base-skel'
        'sway'
        'waybar'
        'autotiling'
        'swaylock'
        'sway-launcher-desktop'
        'swayidle'
        'pamixer'
        'playerctl'
        'light'
        'grim'
        'mako'
        'polkit-gnome'
        'gnome-keyring'
        'blueberry'
        'swaynagmode'
        'htop'
        'ttf-font-logos')
makedepends=('git')
optdepends=('vim: the default cli text editor'
        'ranger: a keyboard centric file manager'
        'qutebrowser: a keyboard-centric browser')
conflicts=('manjaro-desktop-settings')
provides=('manjaro-desktop-settings')
source=()

install="$pkgname.install"

pkgver() {
    date +"%Y%m%d%H%M%S"
}

package() {
    install -d $pkgdir/etc
    cp -r etc/* $pkgdir/etc
    install -d $pkgdir/usr/share/glib-2.0/schemas
    cp -r schemas/* $pkgdir/usr/share/glib-2.0/schemas
}